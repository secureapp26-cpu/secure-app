# Application
NODE_ENV=development
APP_PORT=3000
APP_API_PREFIX=api

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long-change-in-production
JWT_REFRESH_EXPIRATION=7d

# PostgreSQL
# For local development
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=security_app
DATABASE_PASSWORD=security_app_password
DATABASE_NAME=security_app_db

# For DigitalOcean App Platform (use these variable names)
# DATABASE_HOST=${db.HOSTNAME}
# DATABASE_PORT=${db.PORT}
# DATABASE_USERNAME=${db.USERNAME}
# DATABASE_PASSWORD=${db.PASSWORD}
# DATABASE_NAME=${db.DATABASE}

# MongoDB
# For local development
MONGODB_URI=mongodb://localhost:27017/security_app

# For MongoDB Atlas (production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/security_app?retryWrites=true&w=majority

# Redis
# For local development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# For DigitalOcean App Platform (use these variable names)
# REDIS_HOST=${redis.HOSTNAME}
# REDIS_PORT=${redis.PORT}
# REDIS_PASSWORD=${redis.PASSWORD}

# CORS
# For local development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# For production (add your frontend domains)
# CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# Security
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_DEFAULT_LIMIT=200
THROTTLE_STRICT_LIMIT=5
THROTTLE_RELAXED_LIMIT=500

# Logging (for Grafana Stack - optional)
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_TO_LOKI=false
LOKI_HOST=http://localhost:3100

# Grafana (optional)
GRAFANA_ADMIN_PASSWORD=change-in-production
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
