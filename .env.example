# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long-change-in-production
JWT_REFRESH_EXPIRATION=7d

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=security_app
POSTGRES_PASSWORD=security_app_password
POSTGRES_DB=security_app_db

# MongoDB
MONGODB_URI=mongodb://localhost:27017/security_app

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
